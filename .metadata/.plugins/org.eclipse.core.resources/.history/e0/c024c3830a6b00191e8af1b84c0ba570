import org.springframework.stereotype.Component;

@Aspect
@Component
public class LoggingAspect {

	/*@Before("execution(public void addAccount())")
	public void logBeforeAddAccount() {
		System.out.println("Logging before for Add Account");
	}
	@After("execution(public void addAccount())")
	public void logAfterAddAccount() {
		System.out.println("Logging after for Add Account");
	}*/
	@Around("execution(public void addAccount())")
	public void logAddAccount() {
		System.out.println("Logging around for Add Account");
	}
}
